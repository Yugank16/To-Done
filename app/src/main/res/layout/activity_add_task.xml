<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yugank94.todo_ne.addTask">

    <TextView
        android:text="What is to be done?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/title_add"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/set_priority"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/priority_display" />

    <Button
        android:text="Add Task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/addbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. Do assignment"
        android:id="@+id/title_edit_add"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_edit"
        android:layout_below="@+id/title_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:maxLines="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Description here"
        android:id="@+id/desc_edit_add"
        android:padding="10dp"

        android:background="@drawable/round_edit"

        android:layout_below="@+id/desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_add"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/title_edit_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Set Priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_priority"
        android:background="@drawable/round_button"
        android:textColor="#f47d42"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/addbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priority_add"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/set_priority"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy"
        android:id="@+id/date_edit_add"
        android:padding="10dp"

        android:background="@drawable/round_edit"
        android:inputType="text"
        android:maxLines="1"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_below="@+id/date_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_add"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"

        android:layout_below="@+id/date_edit_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="hh.mm"
        android:id="@+id/time_edit_add"
        android:padding="10dp"

        android:background="@drawable/round_edit"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@+id/time_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/time_edit_add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/time_icon"
        android:background="@drawable/time1"


        android:layout_alignBottom="@+id/time_edit_add"
        android:layout_toLeftOf="@+id/priority_display"
        android:layout_toStartOf="@+id/priority_display" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/cal_icon"
        android:background="@drawable/calndr2"

        android:layout_alignTop="@+id/date_edit_add"
        android:layout_alignLeft="@+id/time_icon"
        android:layout_alignStart="@+id/time_icon" />

</RelativeLayout>
